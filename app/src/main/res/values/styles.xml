<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowDrawsSystemBarBackgrounds" tools:targetApi="lollipop">true</item>

    </style>


    <declare-styleable name="FocusImageView">
        <attr name="focus_focusing_id" format="integer" />
        <attr name="focus_success_id" format="integer" />
        <attr name="focus_fail_id" format="integer" />
    </declare-styleable>

    <!-- MaxHeightLayout属性 -->
    <declare-styleable name="MaxHeightLayout">
        <attr name="mhl_HeightRatio" format="reference|float" />
        <attr name="mhl_HeightDimen" format="reference|dimension" />
    </declare-styleable>



    <style name="ToolbarTheme" parent="Theme.AppCompat.Light">
        <!-- 更换Toolbar OVerFlow menu icon -->
        <item name="actionOverflowButtonStyle">@style/OverFlowIcon</item>
        <!-- 设置 toolbar 溢出菜单的文字的颜色 -->
        <item name="android:textColor">@android:color/holo_red_dark</item>
        <!-- 设置 显示在toobar上菜单文字的颜色 -->
        <item name="actionMenuTextColor">@android:color/black</item>
        <!-- 设置toolbar 弹出菜单的字体大小和溢出菜单文字大小-->
        <item name="android:textSize">15sp</item>
    </style>

    <style name="OverFlowIcon" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/abc_ic_menu_moreoverflow_mtrl_alpha</item>
    </style>

    <!-- This configures the styles for the title within the Toolbar  -->
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- This configures the styles for the title within the Toolbar  -->

</resources>
